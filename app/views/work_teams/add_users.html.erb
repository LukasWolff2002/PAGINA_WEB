<div class="container mt-4">
  <h1 class="text-center">Add Users to <%= @work_team.name %></h1>

  <div class="card">
    <div class="card-body">
      <%= form_with(model: @work_team, url: update_users_work_team_path(@work_team), method: :patch, local: true) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :user_emails, "Enter user emails separated by commas" %>
          <%= form.text_area :user_emails, class: "form-control", rows: 3, placeholder: "e.g., user1@example.com, user2@example.com" %>
        </div>

        <div class="actions">
          <%= form.submit 'Add Users', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to 'Back to Team', work_team_path(@work_team), class: 'btn btn-secondary mt-3' %>
</div>
