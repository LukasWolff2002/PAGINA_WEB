<h1>New Work Team</h1>

<%= form_with(model: @work_team, local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :user_emails, "User Emails (separate with commas)" %>
    <%= form.text_area :user_emails, class: "form-control", rows: 3, placeholder: "user1@example.com, user2@example.com" %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', work_teams_path, class: 'btn btn-secondary' %>
