<div class="container mt-4">
  <h1 class="text-center">Create New Work Team</h1>

  <div class="card">
    <div class="card-body">
      <%= form_with(model: @work_team, local: true) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name, 'Team Name' %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter team name", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :description, 'Description' %>
          <%= form.text_area :description, class: "form-control", placeholder: "Describe the team (optional)" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :user_emails, "Add User Emails (separated by commas)" %>
          <%= form.text_area :user_emails, class: "form-control", rows: 3, placeholder: "e.g., user1@example.com, user2@example.com" %>
        </div>

        <div class="actions">
          <%= form.submit 'Save', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to 'Back to Teams', work_teams_path, class: 'btn btn-secondary mt-3' %>
</div>
