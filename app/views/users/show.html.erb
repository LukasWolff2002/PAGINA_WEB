<!-- app/views/users/show.html.erb -->
<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1>Detalles del Usuario</h1>
    </div>
    <div class="card-body">
      <p><strong>Nombre:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
      <p><strong>Cargo:</strong> <%= @user.position %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Fecha de creación:</strong> <%= @user.created_at.strftime("%d de %B, %Y %H:%M") %></p>
      <p><strong>Última actualización:</strong> <%= @user.updated_at.strftime("%d de %B, %Y %H:%M") %></p>
    </div>
  </div>

  <div class="mt-4">
    <h2>Equipos de Trabajo</h2>
    <% if @work_teams.present? %>
      <ul class="list-group">
        <% @work_teams.each do |work_team| %>
          <li class="list-group-item">
            <%= work_team.name %> - <%= work_team.description %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No se encontraron equipos de trabajo.</p>
    <% end %>
  </div>
</div>
