<div class="container mt-4">
  <h1 class="text-center mb-4">Todos los Usuarios</h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Position</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= "#{user.first_name} #{user.last_name}" %></td>
            <td><%= user.email %></td>
            <td><%= user.position %></td>
            <td>
              <%= link_to 'Show', user_path(user), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New User', new_user_path, class: 'btn btn-success btn-sm' %>
</div>
