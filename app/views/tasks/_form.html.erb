<%= form_with(model: [ @board, task ], local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :status %>
    <%= form.select :status, ['TO DO', 'WIP', 'DONE'], {}, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :priority %>
    <%= form.number_field :priority, class: "form-control", required: true %>
  </div>

  <!-- Filtrar los usuarios que pertenecen al equipo de trabajo del board -->
  <div class="form-group mb-3">
    <%= form.label :creator_id, "Creator" %>
    <%= form.collection_select :creator_id, @users, :id, :first_name, {prompt: "Select a creator"}, {class: "form-control"} %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :assignee_id, "Assignee" %>
    <%= form.collection_select :assignee_id, @users, :id, :first_name, {prompt: "Select an assignee"}, {class: "form-control"} %>
  </div>

  <!-- El campo board_id se incluye en el formulario oculto -->
  <%= form.hidden_field :board_id, value: @board.id %>

  <div class="actions">
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
